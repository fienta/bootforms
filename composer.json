{
  "name": "galahad/bootforms",
  "description": "Form builder with Bootstrap-specific conveniences. Remembers old input, retrieves error messages and handles all your boilerplate Bootstrap markup automatically.",
  "keywords": ["laravel", "forms", "bootstrap", "bootforms", "bootform"],
  "authors": [
    {
      "name": "Adam Wathan",
      "email": "adam.wathan@gmail.com"
    },
    {
      "name": "Chris Morrell",
      "homepage": "http://www.cmorrell.com"
    }
  ],
  "license": "MIT",
  "require": {
    "php": ">=7.0|>=8.2",
    "galahad/forms": "^1.6|dev-master",
    "illuminate/support": "5.5.*|5.6.*|5.7.*|5.8.*|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0"
  },
  "require-dev": {
    "phpunit/phpunit": "6.3.*|^10.5",
    "mockery/mockery": "0.9.*|^1.6"
  },
  "autoload": {
    "psr-4": {
      "Galahad\\BootForms\\": "src/"
    }
  },
  "minimum-stability": "stable",
  "extra": {
    "branch-alias": {
      "dev-master": "1.7-dev"
    },
    "laravel": {
      "providers": [
        "Galahad\\BootForms\\BootFormsServiceProvider"
      ],
      "aliases": {
        "BootForm": "Galahad\\BootForms\\Facades\\BootForm"
      }
    }
  }
}
